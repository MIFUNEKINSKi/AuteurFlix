<!DOCTYPE html>
<html>
  <head>
    <title>AuteurFlix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.ico') %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

   <script type="text/javascript">
    window.logoURL = "<%=image_url('auteurflix_logo.png')%>";
    window.avatar = "<%=image_url('profile_avatar.png')%>";
    window.addProfile = "<%=image_url('add_profile.png')%>";
    window.editPencil = "<%=image_url('edit_pencil.png')%>";
    window.searchIcon = "<%=image_url('search.png')%>";
    window.volumeOff = "<%=image_url('volume_off.png')%>"
    window.volumeOn = "<%=image_url('volume_on.png')%>"
    window.kidsIntroUrl = "<%=image_url('minions.gif')%>";
    window.watchGif = "<%=image_url('netflix-and-chill-you-know.gif')%>";
    window.downloadGif = "<%=image_url('homero-netflix.gif')%>";
    window.everywhereGif = "<%=image_url('popcorn-spongebob.gif')%>";
    window.faqGif = "<%=image_url('FAQ.gif')%>";
   </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
